# Intelligent Crawl4AI MCP Server Configuration
# Copy this file to .env and modify the values as needed

# ==================== MCP SERVER SETTINGS ====================
MCP_SERVER_NAME=intelligent_crawl4ai_orchestrator
MCP_SERVER_VERSION=1.2.0
LOG_LEVEL=INFO
DEBUG=false

# ==================== PERFORMANCE SETTINGS ====================
MAX_CONCURRENT_REQUESTS=50
RATE_LIMIT_PER_MINUTE=1000
MCP_TIMEOUT=300
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# ==================== SERVICE URLS ====================
# Ollama API endpoint for AI models
OLLAMA_URL=http://localhost:11434

# ChromaDB endpoint for vector storage
CHROMADB_URL=http://localhost:8000

# Redis endpoint for caching and job queues
REDIS_URL=redis://localhost:6379

# PostgreSQL connection string (optional)
POSTGRES_URL=

# ==================== ADVANCED SETTINGS ====================
# Maximum number of URLs per high-volume job
MAX_BATCH_SIZE=10000

# Default crawl delay to be respectful to websites
DEFAULT_CRAWL_DELAY=1.0

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# ==================== SECURITY SETTINGS ====================
# API key for external integrations (if needed)
API_KEY=

# Webhook secret for job notifications
WEBHOOK_SECRET=

# ==================== LOGGING & MONITORING ====================
# Path to log files
LOG_FILE_PATH=/app/logs/mcp_server.log

# Enable detailed request logging
ENABLE_REQUEST_LOGGING=false

# Metrics export endpoint
METRICS_ENDPOINT=http://localhost:9090/metrics
